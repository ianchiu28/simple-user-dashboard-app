doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Simple user dashboard app
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css' integrity='sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn' crossorigin='anonymous')
  link(href='stylesheets/signin.css' rel='stylesheet')

#logreg-forms
  form.form-signin(action='/auth/local' method='post')
    h1.h3.mb-3.font-weight-normal(style='text-align: center')  Sign in
    .social-login
      button.btn.facebook-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-facebook-f
          |  Sign in with Facebook
      button.btn.google-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-google-plus-g
          |  Sign in with Google
    p(style='text-align:center')  OR
    input#inputEmail.form-control(name='emailAddress' type='email' placeholder='Email address' required='' autofocus='')
    input#inputPassword.form-control(name='password' type='password' placeholder='Password' required='')
    button.btn.btn-success.btn-block(type='submit')
      i.fas.fa-sign-in-alt
      |  Sign in
    //- a#forgot_pswd(href='#') Forgot password?
    hr
    //- <p>Don't have an account!</p>
    button#btn-signup.btn.btn-primary.btn-block(type='button')
      i.fas.fa-user-plus
      |  Sign up New Account

  //- form.form-reset(action='/reset/password/')
  //-   input#resetEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
  //-   button.btn.btn-primary.btn-block(type='submit') Reset Password
  //-   a#cancel_reset(href='#')
  //-     i.fas.fa-angle-left
  //-     |  Back

  form.form-signup(action='/signup/')
    h1.h3.mb-3.font-weight-normal(style='text-align: center')  Sign up
    .social-login
      button.btn.facebook-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-facebook-f
          |  Sign up with Facebook
      button.btn.google-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-google-plus-g
          |  Sign up with Google
    p(style='text-align:center') OR
    input#user-name.form-control(type='text' placeholder='Full name' required='' autofocus='')
    input#user-email.form-control(type='email' placeholder='Email address' required='' autofocus='')
    input#user-pass.form-control(type='password' placeholder='Password' required='' autofocus='')
    input#user-repeatpass.form-control(type='password' placeholder='Repeat Password' required='' autofocus='')
    button.btn.btn-primary.btn-block(type='submit')
      i.fas.fa-user-plus
      |  Sign Up
    a#cancel_signup(href='#')
      i.fas.fa-angle-left
      |  Back

