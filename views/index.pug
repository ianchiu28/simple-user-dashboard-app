doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  title Simple user dashboard app
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css' integrity='sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn' crossorigin='anonymous')
  link(href='stylesheets/signin.css' rel='stylesheet')

#logreg-forms
  form.form-signin
    h1.h3.mb-3.font-weight-normal(style='text-align: center')  Sign in
    .social-login
      button.btn.facebook-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-facebook-f
          |  Sign in with Facebook
      button.btn.google-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-google-plus-g
          |  Sign in with Google
    p(style='text-align:center')  OR
    input#inputEmail.form-control(name='emailAddress' type='email' placeholder='Email address' required='' autofocus='')
    input#inputPassword.form-control(name='password' type='password' placeholder='Password' required='')
    #signInError.alert.alert-danger.text-center.mt-1 Invalid email or password
    button#btnSignin.btn.btn-success.btn-block(type='submit')
      i.fas.fa-sign-in-alt
      |  Sign in
      .loading.spinner-border.spinner-border-sm.ml-1
    //- a#forgot_pswd(href='#') Forgot password?
    hr
    //- <p>Don't have an account!</p>
    button#btn-signup.btn.btn-primary.btn-block(type='button')
      i.fas.fa-user-plus
      |  Sign up New Account

  //- form.form-reset(action='/reset/password/')
  //-   input#resetEmail.form-control(type='email' placeholder='Email address' required='' autofocus='')
  //-   button.btn.btn-primary.btn-block(type='submit') Reset Password
  //-   a#cancel_reset(href='#')
  //-     i.fas.fa-angle-left
  //-     |  Back

  form.form-signup
    h1.h3.mb-3.font-weight-normal(style='text-align: center')  Sign up
    .social-login
      button.btn.facebook-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-facebook-f
          |  Sign up with Facebook
      button.btn.google-btn.social-btn(type='button' formnovalidate='')
        span
          i.fab.fa-google-plus-g
          |  Sign up with Google
    p(style='text-align:center') OR
    input#emailAddress.form-control(type='email' placeholder='Email address' required='' autofocus='')
    input#username.form-control(type='text' placeholder='User name' required='' autofocus='')
    input#password.form-control(type='password' placeholder='Password' required='' autofocus='')
    p#passwordError.alert.alert-danger.mt-1.small
      |  Password must contain all of the following requirements:
      br
      |  * Contains at least one lower character.
      br
      |  * Contains at least one upper character.
      br
      |  * Contains at least one digit character.
      br
      |  * Contains at least one special character.
      br
      |  * Contains at least 8 characters.
    input#confirmPassword.form-control(type='password' placeholder='Confirm Password' required='' autofocus='')
    p#confirmPasswordError.alert.alert-danger.mt-1.small  Password and Confirm Password must be match.
    p#signUpError.alert.alert-danger.mt-1.small
    button#btnSignup.btn.btn-primary.btn-block(type='submit')
      i.fas.fa-user-plus
      |  Sign Up
      .loading.spinner-border.spinner-border-sm.ml-1
    a#cancel_signup(href='#')
      i.fas.fa-angle-left
      |  Back

#modalSomethingWrong.modal.fade(tabindex="-1")
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5.modal-title Something went wrong
        button.close(type="button" data-dismiss="modal")
          span &times;
      .modal-body Please try again later.
      .modal-footer
        button.btn.btn-primary(type="button" data-dismiss="modal") OK

#modalNotVerified.modal.fade(tabindex="-1")
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5.modal-title Account is not verified
        button.close(type="button" data-dismiss="modal")
          span &times;
      .modal-body
        h6.small Please check the verification mail in the mail box.
        h6.small Or click the button below to resend verification mail.
        button#btnResendMail.btn.btn-primary Resend verification mail
          .loading.spinner-border.spinner-border-sm.ml-1
      .modal-footer
        button.btn.btn-secondary(type="button" data-dismiss="modal") Cancel

#modalSignUpSuccess.modal.fade(data-backdrop="static" data-keyboard="false" tabindex="-1")
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5.modal-title Success
      .modal-body
        h6.small A verification link has been sent to your email account.
        h6.small Please click on the link that has just been sent to your email account to verify your email and continue the sign up process.
      .modal-footer
        a.btn.btn-primary(href="/") OK

script(src='https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js' integrity='sha384-ZvpUoO/+PpLXR1lu4jmpXWu80pZlYUAfxl5NsBMWOEPSjUn/6Z/hRTt8+pR6L4N2' crossorigin='anonymous')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF' crossorigin='anonymous')
script(src='javascripts/signin.js')